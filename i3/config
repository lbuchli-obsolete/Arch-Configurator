#============Session-Saver===========
mode "Save Session" {
    bindsym 1 exec i3-save-tree > ~/.config/i3/workspaces/ws1.json, mode "default"
    bindsym 2 exec i3-save-tree > ~/.config/i3/workspaces/ws2.json, mode "default"
    bindsym 3 exec i3-save-tree > ~/.config/i3/workspaces/ws3.json, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+s mode "Save Session"

mode "Restore Session" {
    bindsym 1 append_layout ~/.config/i3/workspaces/ws1.json, mode "default"
    bindsym 2 append_layout ~/.config/i3/workspaces/ws2.json, mode "default"
    bindsym 3 append_layout ~/.config/i3/workspaces/ws3.json, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+l mode "Restore Session"
